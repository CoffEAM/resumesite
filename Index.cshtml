<form class="row g-3" action="~/Home/Create_Resume/">
    <div class="input-group">
        <span class="input-group-text">Имя и фамилия</span>
        <input type="text" aria-label="First name" class="form-control" name="username">
        <input type="text" aria-label="Last name" class="form-control" name="usersurname">
    </div>
    <div class="form-group">
        <label for="inputDate">Дата рождения:</label>
        <div class="form_date">
            <input type="date" class="form-control" name="user_birthday">
        </div>
    </div>
    <div class="col-md-6">
        <label for="inputCity" class="form-label">Город проживания</label>
        <div class="form-city"><input type="text" class="form-control" id="inputCity"></div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">Ищу удаленную работу</label>
        </div>
    </div>
    <div class="col-5">
        <div class="email-text"><label for="exampleFormControlInput1">Email address</label></div>
        <div class="email-input"><input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com"></div>
    </div>
    <div class="">
        <p>Телефон</p>
        <input type="tel" class="phone form-control">
    </div>
    <div class="col-2">
        <label for="inputZip" class="form-label">Zip</label>
        <input type="text" class="form-control" id="inputZip">
    </div>
    <div class="col-12">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck">
            <label class="form-check-label" for="gridCheck">
                Check me out
            </label>
        </div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
</form>
